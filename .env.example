# The Asheville Setlist - Environment Variables
# Copy to .env and fill in actual values: cp .env.example .env

# ==============================================================================
# SHARED (API + Scraper)
# ==============================================================================

# Database connection string
# Format: postgres://user:password@host:port/database?sslmode=require
# Local: postgres://postgres:postgres@localhost:5432/asheville_setlist?sslmode=disable
# Production: Use Neon/managed Postgres connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/asheville_setlist?sslmode=disable

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Application environment: development, staging, production
ENV=development

# ==============================================================================
# API SERVICE (cmd/api)
# ==============================================================================

# Server port
PORT=8080

# Gin mode: debug, release
# Use "release" in production for better performance
GIN_MODE=debug

# CORS allowed origins (comma-separated)
# Development: http://localhost:3000
# Production: https://ashevillesetlist.com,https://www.ashevillesetlist.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# API rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=100

# ==============================================================================
# SCRAPER SERVICE (cmd/scraper)
# ==============================================================================

# Scraper user agent
SCRAPER_USER_AGENT=AshevilleSetlist/1.0 (+https://ashevillesetlist.com)

# Maximum concurrent scrapers
SCRAPER_MAX_CONCURRENT=5

# Request timeout (seconds)
SCRAPER_TIMEOUT=30

# Retry attempts on failure
SCRAPER_MAX_RETRIES=3

# Delay between requests to same domain (milliseconds)
SCRAPER_RATE_LIMIT_DELAY=1000

# Chrome/Chromium path for JavaScript scraping (chromedp)
# Leave empty to use system Chrome
# MacOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/chromium-browser
CHROME_PATH=

# Headless browser timeout (seconds)
CHROME_TIMEOUT=30

# ==============================================================================
# FRONTEND (Next.js) - Create frontend/.env.local from these
# ==============================================================================

# API base URL
# Development: http://localhost:8080
# Production: https://api.ashevillesetlist.com
NEXT_PUBLIC_API_URL=http://localhost:8080

# ==============================================================================
# OPTIONAL - Production/Advanced Features
# ==============================================================================

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# Google Analytics measurement ID (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Vercel environment (auto-set by Vercel)
# VERCEL_ENV=production

# Database connection pool settings (optional, has defaults)
# DB_MAX_OPEN_CONNS=25
# DB_MAX_IDLE_CONNS=5
# DB_CONN_MAX_LIFETIME=300

# ==============================================================================
# LOCAL DEVELOPMENT ONLY
# ==============================================================================

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=asheville_setlist
